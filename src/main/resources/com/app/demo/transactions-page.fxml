<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="480.0" prefWidth="1205.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.demo.TransactionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextField fx:id="searchField" layoutX="60.0" layoutY="58.0" promptText="Search transactions..." />
    <ComboBox fx:id="categoryFilterComboBox" layoutX="300.0" layoutY="58.0" promptText="All categories" />
    <Button layoutX="557.0" layoutY="58.0" mnemonicParsing="false" onAction="#onAddTransaction" text="Add transaction">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
    <Label fx:id="totalBalanceLabel" layoutX="25.0" layoutY="17.0" text="Total balance: 0.00" />

    <AnchorPane layoutX="20.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="100.0">
        <TreeView fx:id="assetsLiabilitiesTreeView" prefHeight="200.0" prefWidth="200.0" />
        <Button layoutY="220.0" mnemonicParsing="false" onAction="#onAddAsset" text="Add Asset" />
        <Button layoutY="260.0" mnemonicParsing="false" onAction="#onAddLiability" text="Add Liability" />
    </AnchorPane>
   <Label fx:id="viewLabel" layoutX="300.0" layoutY="26.0" text="Main view" />

    <AnchorPane fx:id="mainContainer" layoutX="240.0" layoutY="100.0" prefHeight="359.0" prefWidth="914.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="240.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
        <TableView fx:id="transactionsTable" prefHeight="320.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="sourceColumn" prefWidth="92.0" text="Source" />
                <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Amount" />
                <TableColumn fx:id="categoryColumn" prefWidth="92.0" text="Category" />
                <TableColumn fx:id="payerColumn" prefWidth="120.8" text="Payer/Recipient" />
                <TableColumn fx:id="incomeExpenseColumn" prefWidth="120.8" text="Income/Expense" />
                <TableColumn fx:id="descriptionColumn" prefWidth="120.8" text="Description" />
                <TableColumn fx:id="dateColumn" prefWidth="109.6" text="Date" />
            </columns>
        </TableView>

        <AnchorPane layoutX="625.0" layoutY="-25.0" prefHeight="320.0" prefWidth="150.0">
            <HBox layoutY="60.0" spacing="10.0">
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#onUpdateTransaction" text="Update transaction" />
                <Button fx:id="removeButton" mnemonicParsing="false" onAction="#onRemoveTransaction" text="Remove transaction" />
            </HBox>
            <Button layoutY="100.0" mnemonicParsing="false" onAction="#onViewTransaction" text="View transaction" />
            <Button layoutY="140.0" mnemonicParsing="false" onAction="#onSaveTransaction" text="Save transactions" />
        </AnchorPane>
    </AnchorPane>
</AnchorPane>
